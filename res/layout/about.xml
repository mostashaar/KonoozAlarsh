<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

      <TableLayout android:id="@+id/tableLayout1" android:layout_height="match_parent" android:layout_width="fill_parent">
			<TableRow android:paddingTop="20px" android:id="@+id/aboutrow1" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
	          <ImageView android:src="@drawable/about" android:layout_width="match_parent" android:id="@+id/about" android:layout_height="wrap_content"></ImageView>
	      	</TableRow>
	      	<TableRow android:paddingTop="20px" android:id="@+id/aboutrow2" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView
	      	    android:id="@+id/textView1"
	      	    android:layout_width="wrap_content"
	      	    android:layout_height="wrap_content"
	      	    android:gravity="center"
	      	    android:textColor="#FFFFFF"
	      	    android:padding="10dp"
	      	    android:lineSpacingMultiplier="1.4"
	      	    android:textSize="27px"
	      	    android:text="@string/about" />
	      	</TableRow>

	      	
    
	</TableLayout>
</ScrollView>